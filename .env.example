# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
ENVIRONMENT=development

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=6.1  # Quadro P1000 compute capability

# Computer Vision Provider (yolo, clip, or easyocr)
CV_PROVIDER=yolo
CV_MODEL_PATH=./models/cv

# YOLOv8 Configuration
YOLO_MODEL=yolov8n.pt
YOLO_CONFIDENCE=0.5

# CLIP Configuration
CLIP_MODEL=ViT-B/32

# EasyOCR Configuration
EASYOCR_LANGUAGES=en,ru,zh

# LLM Provider (llava or qwen)
LLM_PROVIDER=llava
LLM_MODEL_PATH=./models/llm

# LLaVA Configuration (via Ollama)
OLLAMA_HOST=http://localhost:11434
LLAVA_MODEL=llava:7b-v1.6-mistral-q4_0
LLAVA_MAX_TOKENS=512
LLAVA_TEMPERATURE=0.7

# Qwen-VL Configuration
QWEN_MODEL=Qwen-VL-Chat-Int4
QWEN_MAX_TOKENS=512

# Model Management
MODEL_UNLOAD_TIMEOUT=300  # seconds
ENABLE_MODEL_CACHING=true
USE_MIXED_PRECISION=true

# Application Settings
MAX_IMAGE_SIZE_MB=10
SESSION_TIMEOUT_MINUTES=30
CACHE_TTL_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_GPU_STATS=true
